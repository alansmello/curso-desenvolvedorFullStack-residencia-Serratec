create database livraria;


CREATE TABLE Cliente (
    codigo_cliente serial PRIMARY KEY,
    nome varchar(30) not NULL,
    telefone varchar(11),
    cpf varchar(11),
    cnpj varchar(14),
    razao_social varchar(30),
    tipo_cliente char
);

