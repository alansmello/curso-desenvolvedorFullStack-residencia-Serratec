CREATE TABLE compra(
	numero_nota int PRIMARY KEY, 
	data_compra date, 
	codigo_cliente int,
	FOREIGN KEY (codigo_cliente) REFERENCES cliente(codigo_cliente)
);
					



INSERT INTO compra (numero_nota,data_compra,codigo_cliente) VALUES(12,'15-03-2022',1);
